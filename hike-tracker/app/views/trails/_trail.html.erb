  <p>
    <strong>Location:</strong>
    <%= trail.location %>
  </p>

  <p>
    <strong>Length:</strong>
    <%= trail.length %> miles
  </p>

  <p>
    <strong>Elevation:</strong>
    <%= trail.elevation %> feet
  </p>

  <p>
    <strong>Description:</strong>
    <%= trail.description %>
  </p>
</div>
